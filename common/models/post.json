{
  "name": "Post",
  "plural": "Posts",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "imageUrl": {
      "type": "string"
    },
    "content": {
      "type": "string",
      "required": true
    },
    "published": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "datePublished": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "tags": {
      "type": "hasMany",
      "model": "Tag",
      "foreignKey": "postId",
      "through": "PostTag"
    },
    "category": {
      "type": "belongsTo",
      "model": "Category",
      "foreignKey": ""
    },
    "author": {
      "type": "belongsTo",
      "model": "BlogUser",
      "foreignKey": "authorId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "author",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "publish"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "tag"
    }
  ],
  "methods": {}
}
